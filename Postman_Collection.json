{
    "info": {
        "name": "Todolist App API",
        "description": "API collection for the Todolist Application (Frontend Developer Assignment)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"John Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"SecurePass123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/user/sign-up",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "sign-up"
                            ]
                        }
                    }
                },
                {
                    "name": "Login User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"SecurePass123\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/user/sign-in",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "sign-in"
                            ]
                        }
                    }
                },
                {
                    "name": "Logout User",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/user/logout",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "logout"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "User Profile",
            "item": [
                {
                    "name": "Get Profile",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/user/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "profile"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Profile",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"Jane Doe\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/user/profile",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "user",
                                "profile"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Todos (Tasks)",
            "item": [
                {
                    "name": "Create Task",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"text\": \"Finish the assignment\",\n    \"description\": \"Complete the frontend and backend integration\",\n    \"priority\": \"Extreme\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/todo/create",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "todo",
                                "create"
                            ]
                        }
                    }
                },
                {
                    "name": "Fetch Tasks",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/todo/fetch",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "todo",
                                "fetch"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Task Status",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"isComplete\": true\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/todo/update/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "todo",
                                "update",
                                ":id"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Task",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{jwt_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/todo/delete/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "todo",
                                "delete",
                                ":id"
                            ]
                        }
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:4000",
            "type": "string"
        },
        {
            "key": "jwt_token",
            "value": "your_jwt_token_here",
            "type": "string"
        }
    ]
}